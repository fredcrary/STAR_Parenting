<resources>
    <!--<style name="button" parent="@android:style/Widget.Button">-->
        <!--<item name="android:background">@drawable/button_style</item>-->
    <!--</style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="buttonStyle">@style/colorButton</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom text styles -->

    <style name="ActivityTitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="ActivityTitleText.Inverse">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Custom button styles -->

    <!-- core button style -->
    <style name="colorButton" parent="android:Widget.Button">
        <item name="android:background">@color/blue</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Custom button colors -->
    <style name="colorButton.orangeButton">
        <item name="android:background">@color/orange</item>
    </style>
    <style name="colorButton.greenButton">
        <item name="android:background">@color/green</item>
    </style>
    <style name="colorButton.redButton">
        <item name="android:background">@color/red</item>
    </style>
    <style name="colorButton.yellowButton">
        <item name="android:background">@color/yellow</item>
    </style>
    <style name="colorButton.blueButton">
        <item name="android:background">@color/blue</item>
    </style>
    <style name="colorButton.turqoiseButton">
        <item name="android:background">@color/turqoise</item>
    </style>
    <style name="colorButton.turqoisedarkButton">
        <item name="android:background">@color/turqoisedark</item>
    </style>
    <style name="colorButton.turqoisedarkerButton">
        <item name="android:background">@color/turqoisedarker</item>
    </style>
    <style name="colorButton.violetButton">
        <item name="android:background">@color/violet</item>
    </style>
    <style name="colorButton.greyButton">
        <item name="android:background">@color/grey</item>
    </style>
    <style name="colorButton.rainbowButton">
        <item name="android:background">@drawable/rainbow_repeat</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"

        />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"

        />
</resources>
